{
  "name": "legal-case-management",
  "version": "1.0.0",
  "description": "Sistema de gestão jurídica com Supabase PostgreSQL",
  "main": "dist/index.js",
  "scripts": {
    "dev": "NODE_ENV=development tsx server/index.ts",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "vite build",
    "build:backend": "esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist --target=node18",
    "start": "node dist/index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "express": "^4.18.0",
    "cors": "^2.8.5",
    "pg": "^8.11.0",
    "drizzle-orm": "^0.29.0",
    "bcryptjs": "^2.4.3",
    "express-session": "^1.17.3",
    "connect-pg-simple": "^9.0.1",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.0",
    "@types/cors": "^2.8.0",
    "@types/pg": "^8.10.0",
    "@types/bcryptjs": "^2.4.0",
    "@types/express-session": "^1.17.0",
    "@types/multer": "^1.4.0",
    "vite": "^5.0.0",
    "esbuild": "^0.19.0",
    "typescript": "^5.0.0"
  }
}