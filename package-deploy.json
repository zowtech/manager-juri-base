{
  "name": "legal-case-management",
  "version": "1.0.0",
  "description": "Sistema de gestão jurídica com SQLite - Deploy fácil para qualquer plataforma",
  "main": "dist/index.js",
  "scripts": {
    "dev": "NODE_ENV=development tsx server/index.ts",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "vite build",
    "build:backend": "esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist --target=node18",
    "start": "node dist/index.js",
    "preview": "npm run build && npm start",
    "clean": "rm -rf dist data/*.db-*",
    "backup": "cp data/legal-system.db backup-$(date +%Y%m%d-%H%M%S).db",
    "reset-db": "rm -f data/legal-system.db && npm run dev"
  },
  "keywords": [
    "legal",
    "case-management", 
    "sqlite",
    "nodejs",
    "react",
    "typescript",
    "deploy-ready"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "better-sqlite3": "^9.4.0",
    "drizzle-orm": "^0.29.0",
    "express": "^4.18.0",
    "cors": "^2.8.5",
    "@types/better-sqlite3": "^7.6.0"
  },
  "author": "Legal System",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/usuario/legal-system"
  }
}